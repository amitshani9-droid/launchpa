rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Sites: Allow public creation/read for the simulation flow (Temporary/Global)
    match /sites/{siteId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false; // Strict: No one can edit/delete global sites once created
    }
    
    // Users: strictly own data + their subcollections (sites)
    // This covers /users/{uid} AND /users/{uid}/sites/{siteId}
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
